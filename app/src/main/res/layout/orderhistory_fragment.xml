<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"

    android:orientation="vertical">

    <TextView
        android:id="@+id/hinttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/my_order_text"
        android:textColor="@color/line_pmsf"
        android:textSize="11sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/line_pmsf"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="4dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="4dp"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/scroll_thumbv_pmsf"
        android:scrollbarTrackVertical="@drawable/scroll_trachkv_pmsf"
        android:scrollbars="vertical" />
</LinearLayout>