<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:minWidth="366dp"
    android:minHeight="241dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <com.wheatek.smartdevice.wheelview.view.WheelView
            android:id="@+id/wheelview1"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <com.wheatek.smartdevice.wheelview.view.WheelView
            android:id="@+id/wheelview2"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

        <com.wheatek.smartdevice.wheelview.view.WheelView
            android:id="@+id/wheelview3"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:background="#55ffffff"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="@color/text_primary_pmsf"
            android:textSize="11sp">

        </TextView>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#55ffffff"
            android:padding="10dp"
            android:text="@string/sure"
            android:textColor="@color/text_primary_pmsf"
            android:textSize="11sp">

        </TextView>
    </LinearLayout>
</FrameLayout>