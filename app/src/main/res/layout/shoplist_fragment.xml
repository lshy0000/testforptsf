<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hinttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/shoplist_hint_text_pmsf2"
        android:textColor="@color/secondary_pmsf"
        android:textSize="9sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:background="@color/secondary_pmsf"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarSize="4dp"
        android:layout_marginBottom="10dp"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/scroll_thumbv_pmsf"
        android:scrollbarTrackVertical="@drawable/scroll_trachkv_pmsf"
        android:scrollbars="vertical" />
</LinearLayout>